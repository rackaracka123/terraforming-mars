{
  "name": "terraforming-mars",
  "version": "1.0.0",
  "description": "Digital implementation of Terraforming Mars board game",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && go run cmd/server/main.go",
    "frontend": "cd frontend && yarn start",
    "dev": "npm start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && go build -o bin/server cmd/server/main.go",
    "build:frontend": "cd frontend && npm run build",
    "clean": "rm -rf frontend/node_modules backend/bin node_modules",
    "install-all": "npm install && cd frontend && npm install",
    "generate-types": "cd backend && go run tools/generate-types.go",
    "generate-docs": "cd backend && export PATH=$PATH:$(go env GOPATH)/bin && go generate",
    "design:capture": "node tools/design-inspector.js capture",
    "design:reference": "node tools/design-inspector.js reference",
    "design:compare": "node tools/design-inspector.js compare",
    "design:component": "node tools/design-inspector.js component"
  },
  "devDependencies": {
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "concurrently": "^7.6.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^24.17.1"
  }
}
